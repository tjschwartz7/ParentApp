<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_blood_ox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="1dp"
                android:text="@string/des_blood_ox"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_heart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="1dp"
                android:text="@string/des_heart_rate"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="1dp"
                android:text="@string/des_temp"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tv_rad_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="1dp"
                android:text="@string/des_rad"
                android:textAlignment="textStart"
                android:textColor="#FFFFFF" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#4B1678"
                android:fadingEdge="horizontal|vertical" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>