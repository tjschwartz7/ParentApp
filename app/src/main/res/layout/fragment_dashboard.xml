<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical"
>
    <!--Our video viewer for the baby footage -->
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="232dp" />

    <!--This layout contains our blood ox and temp data views -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Blood Oxygen:"
            android:background="@color/teal_200"
            android:layout_marginRight="20dp"
            android:padding="5dp"
        />
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="95%"
            android:background="@color/healthy_green"
            android:padding="5dp"
            />
    </LinearLayout>

    <!--This layout contains our pulse data view-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Pulse:"
            android:background="@color/teal_200"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            />

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="110 bpm"
            android:background="@color/caution_yellow"
            android:padding="5dp"
            />
    </LinearLayout>

    <!--This layout contains our blood ox and temp data views -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Temperature: "
            android:background="@color/teal_200"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="102 F"
            android:textColor="@color/white"
            android:background="@color/warning_red"
            android:padding="5dp"
            />
    </LinearLayout>

</LinearLayout>


